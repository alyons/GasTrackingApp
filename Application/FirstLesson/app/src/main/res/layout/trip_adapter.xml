<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Date: 01/01/1970"
        android:contentDescription="Date" />

    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Miles: 150"
        android:contentDescription="Distance" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Gallons: 7.500"
        android:contentDescription="Amount of Fuel Pruchased" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Price: $2.75"
        android:contentDescription="Price per Unit of Fuel Purchased" />

</LinearLayout>